FROM szymonrychu/ros-base:latest AS base

USER root

RUN set -xe;\
    apt-get update;\
    apt-get install -y \
        git \
        ros-${ROS_DISTRO}-camera-info-manager \
        ros-${ROS_DISTRO}-diagnostic-updater \
        ros-${ROS_DISTRO}-rgbd-launch \
        freenect

FROM base AS compilation

ENV FREENECT_STACK_URL https://github.com/szymonrychu/freenect_stack
ENV FREENECT_STACK_COMMIT melodic-0.0.1

RUN set -xe;\
    mkdir -p /build/catkin_ws/src;\
    cd /build/catkin_ws/src;\
    git clone ${FREENECT_STACK_URL} .;\
    git checkout ${FREENECT_STACK_COMMIT};\
    rm -Rf .git;\
    cd /build/catkin_ws;\
    bash -c "source /opt/ros/${ROS_DISTRO}/setup.bash; catkin_make -DCMAKE_INSTALL_PREFIX=/opt/ros/${ROS_DISTRO} install"

FROM base AS release

COPY freenect/fakenect/ /

RUN set -xe;\
    chmod +x /fakenect.sh    

COPY --from=compilation /opt/ros/${ROS_DISTRO} /opt/ros/${ROS_DISTRO}

USER ros